<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/C_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aged.supercal.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="*"
        >

        <TableRow
            android:id="@+id/table_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#4b423d"
                android:drawableTop="@mipmap/ph_a_c"
                android:gravity="center"
                android:padding="19dp"
                android:text="四则运算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#564d44"
                android:drawableTop="@mipmap/ph_b_c"
                android:gravity="center"
                android:padding="19dp"
                android:text="个税计算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#5a5148"
                android:drawableTop="@mipmap/ph_c_c"
                android:gravity="center"
                android:padding="19dp"
                android:text="房贷计算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/table_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#564d44"
                android:drawableTop="@mipmap/ph_d_c"
                android:gravity="center"
                android:padding="19dp"
                android:text="亲属称呼换算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#5a5148"
                android:drawableTop="@mipmap/ph_e_c"
                android:gravity="center"
                android:padding="19dp"
                android:text="单位换算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#4b423d"
                android:drawableTop="@mipmap/ph_f_c"
                android:gravity="center"
                android:padding="19dp"
                android:text="时间换算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/table_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#5a5148"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="10dp"
                android:text="汇率计算"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#4b423d"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#564d44"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/table_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#4b423d"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#564d44"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="#5a5148"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
