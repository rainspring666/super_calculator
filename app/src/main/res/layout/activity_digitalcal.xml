<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/fif_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginTop="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pri_btn17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30dp"

                />

            <Button
                android:id="@+id/pri_btn18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/for_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="440dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pri_btn13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="="
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thi_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="360dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pri_btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pri_btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sec_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="280dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pri_btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pri_btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textSize="30dp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
